<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina  %> </h1>
    <form  class="default-form"  method="POST" enctype="multipart/form-data">
        <legend>Sube tu imagen que se mostarara junto a tu nombre y biografia</legend>
        <% if(usuario.imagen) { %>
            <div class="campo">
                <label for="imagen">Imagen Actual</label>
                <img src="/uploads/perfiles/<%= usuario.imagen %>" width="200" alt="Imagen Perfil">
            </div>
        <% } else { %>
            <p>No hay imagen Actual</p>
        <% } %>
        <div class="campo">
            <label for="imagen">Imagen</label>
            <input type="file" id="imagen" name="imagen">
        </div>
        <div class="campo enviar ">
            <input type="submit" class="btn btn-rosa" value="Subir Imagen">
        </div>
    </form>
</main>