<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina  %> </h1>
    <form  class="default-form" method="POST">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" name="nombre" placeholder="Nombre del grupo" value="<%= grupo.nombre %> ">
        </div>
        <div class="campo descripcion">
            <label for="descripcion">Descripcion</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= grupo.descripcion %> ">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="Categoria">Categoria</label>
            <select name="categoriaId" id="categoria">
                <option value="" selected disabled>-- Elige una categoria --</option>
                <% categorias.forEach(categoria => { %>
                    <option 
                        value="<%= categoria.id %>"
                        <%= (grupo.categoriaId === categoria.id ) ? 'selected' : '' %>
                        ><%= categoria.nombre %></option>
                <% }) %>
            </select>
        </div>
        <div class="campo">
            <label for="url">Sitio Web</label>
            <input type="text" id="url" name="url" placeholder="Sitio Web" value="<%= grupo.url %> ">
        </div>
        <div class="campo enviar ">
            <input type="submit" class="btn btn-rosa" value="Guardar Cambios">
        </div>
    </form>
</main>