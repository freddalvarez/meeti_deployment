<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina  %> </h1>
    <form  class="default-form" action="/nuevo-grupo" method="POST" enctype="multipart/form-data">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" name="nombre" placeholder="Nombre del grupo">
        </div>
        <div class="campo descripcion">
            <label for="descripcion">Descripcion</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="Categoria">Categoria</label>
            <select name="categoriaId" id="categoria">
                <option value="" selected disabled>-- Elige una categoria --</option>
                <% categorias.forEach(categoria => { %>
                    <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
                <% }) %>
            </select>
        </div>
        <div class="campo">
            <label for="imagen">Imagen</label>
            <input type="file" id="imagen" name="imagen">
        </div>
        <div class="campo">
            <label for="url">Sitio Web</label>
            <input type="text" id="url" name="url" placeholder="Sitio Web">
        </div>
        <div class="campo enviar ">
            <input type="submit" class="btn btn-rosa" value="Crear Grupo">
        </div>
    </form>
</main>