<main class="contenedor asistentes">
    <h1><%= nombrePagina %> </h1>

    <% if(asistentes.length > 0 ) { %> 
        <ul class="listado-asistentes">
            <% asistentes.forEach(asistente => { %> 
                <li>
                    <div class="imagen">
                        <% if(asistente.imagen) { %> 
                            
                            <img src="/uploads/perfiles/<%= asistente.imagen %>" alt="imagen-asistente">
                        <% } %>
                    </div>
                    <div class="texto">
                        <p><%= asistente.nombre %> </p>
                        <p><%= asistente.email %> </p>
                    </div>
                </li>
            <% }) %> 
        </ul>
    <% } else { %>
        <p class="no-asistentes">AÃºn no hay asistentes</p>
    <% } %>
</main>